{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/MinBZK/par-dpia-form/blob/main/schemas/schema_DPIA.json",
    "type": "object",
    "defs": {
        "glossary_term": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "description": "Unique identifier for the term"
                },
                "name": {
                    "type": "string",
                    "description": "Display name of the term"
                },
                "definition": {
                    "type": "string",
                    "description": "Complete definition of the term"
                },
                "related_terms": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "description": "IDs of related terms"
                    }
                }
            },
            "required": [
                "id",
                "name",
                "definition",
                "category"
            ]
        },
        "task": {
            "type": "object",
            "properties": {
                "task": {
                    "type": "string",
                    "description": "The task"
                },
                "description": {
                    "type": "string",
                    "description": "The description"
                },
                "id": {
                    "type": "string",
                    "pattern": "^[0-9]+(\\.[0-9]+)*"
                },
                "type": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "text_input",
                            "open_text",
                            "select_option",
                            "checkbox_option",
                            "radio_option",
                            "task_group",
                            "date"
                        ]
                    }
                },
                "options": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "value": {
                                "type": ["string", "boolean", "null"]
                            },
                            "label": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "value"
                        ]
                    }
                },
                "required_status": {
                    "type": "boolean"
                },
                "repeatable": {
                    "type": "boolean"
                },
                "tasks": {
                    "type": "array",
                    "items": {
                        "$ref": "#/defs/task"
                    }
                }
            },
            "required": [
                "task",
                "id",
                "type",
                "repeatable"
            ],
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "type": {
                                "oneOf": [
                                    {
                                        "type": "string",
                                        "const": "select_option"
                                    },
                                    {
                                        "type": "array",
                                        "contains": {
                                            "const": "select_option"
                                        }
                                    }
                                ]
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "options"
                        ]
                    }
                }
            ]
        }
    },
    "properties": {
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "urn": {
            "type": "string",
            "pattern": "^urn:nl:[a-z]+:[0-9]+\\.[0-9]+(:[0-9]+\\.[0-9]+)?$"
        },
        "glossary": {
            "type": "object",
            "properties": {
                "terms": {
                    "type": "array",
                    "items": {
                        "$ref": "#/defs/glossary_term"
                    }
                },
                "categories": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "terms"
            ]
        },
        "tasks": {
            "type": "array",
            "items": {
                "$ref": "#/defs/task"
            }
        }
    },
    "required": [
        "name",
        "description",
        "urn",
        "tasks"
    ]
}
